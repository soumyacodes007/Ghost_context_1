{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2020"]
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}

